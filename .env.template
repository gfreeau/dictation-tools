# OpenAI API key for cleanup and API mode transcription
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_api_key_here

# Whisper transcription mode: "local" (faster-whisper) or "api" (OpenAI API)
# Default: local
WHISPER_MODE=local

# OpenAI model to use for dictation cleanup, recommend gpt-4o-mini based on evals results
OPENAI_MODEL=gpt-4o-mini

# Enable/disable GPT cleanup after transcription
# Default: true
WHISPER_CLEANUP=true

# Local Whisper model size (for WHISPER_MODE=local)
# Options: tiny, base, small, medium, large
# Default: base
WHISPER_MODEL_SIZE=base

# Compute type for local Whisper (for WHISPER_MODE=local)
# Options: int8, float16, float32
# Default: int8
WHISPER_COMPUTE_TYPE=int8